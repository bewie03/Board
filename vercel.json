{
  "buildCommand": "cd boneboard && npm ci && npm run build",
  "installCommand": "cd boneboard && npm ci",
  "outputDirectory": "boneboard/dist",
  "functions": {
    "boneboard/api/**/*.ts": {
      "runtime": "@vercel/node@3.2.29"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/boneboard/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
